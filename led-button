# define F_CPU 1000000UL
#include <avr/io.h>
#include <util/delay.h>
#define SVETODIOD PORTD 
int main(void)
{
	
    /* Replace with your application code */
	//(Data Direction Register D) — это регистр направления передачи данных порта D 
	DDRD = 0b00001111;
	
	//PORTD — это регистр данных порта D в микроконтроллере ATmega, который отвечает за управление состоянием выводов порта D (PD7-PD0).
	SVETODIOD = 0b00001111;
	
	//Настраиваем порт B на вход; 
	//Запись 0 в PORTB для входного пина отключает подтягивающий резистор 
	DDRB = 0b00000000;
	//Запись 1 в PORTB для входного пина включает подтягивающий резистор
	PORTB = 0b00000001;
	
	
    while (1) 
    {	
		//Если кнопка нажата то все светодиоды гаснут
		if (PINB  == 0b00000000)
		{
			
			SVETODIOD = 0b00000000;
			
			
		}
		else{
			SVETODIOD = 0b00001111;
		}
		
		
		// Задержка 1 секунда, светодиод выключен
		//SVETODIOD = 0b00000000;
		//_delay_ms(1000);
		
		// Задержка 1 секунда, светодиод включен
		//SVETODIOD = 0b00001111;
		//_delay_ms(1000);

    }
}

