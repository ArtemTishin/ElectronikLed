# define F_CPU 1000000UL
#include <avr/io.h>
#include <util/delay.h>
#define SVETODIOD PORTD
#define  SVETODIODC PORTC
#define DELAY 1000

int main(void)
{
    /* Replace with your application code */
	
	//DDRD = 0b00000010;
	//PORTD = 0b00000010;
	//DDRD = 0b00000010;
	//PORTD = 0b00000010;
	// Порт  С
	DDRC = 0b00000001;
	SVETODIODC = 0b00000001;
	// Порт D
	DDRD = 0b00000010;
	SVETODIOD = 0b00000010;
    while (1) 
    {
		//Порт D
		SVETODIOD = 0b00000011;
		// Задержка 1 секунда
		_delay_ms(DELAY);
		
		SVETODIOD = 0b00000000;
		// Задержка 1 секунда
		_delay_ms(DELAY);
		
		// Порт С
		SVETODIODC = 0b00000000;
		// Задержка 1 секунда
		_delay_ms(DELAY);
		
		
		SVETODIODC = 0b00000001;
		// Задержка 1 секунда
		_delay_ms(DELAY);
    }
}

